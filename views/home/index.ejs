  event.preventDefault(); // Prevent the default form submission

  const searchTerm = input.value.trim(); // Retrieve the search term

  // Perform the search operation based on the search term
  if (searchTerm !== '') {
    // Perform your search logic here
    console.log('Searching for:', searchTerm);
    
    // Clear the input field
    input.value = '';       
  }
});

        </script>
    <title>Blog</title>
</head>
<body style="background-image: '../../images/background.jpg'">
    <div class="container mt-3">
        <h1 class="mb-3">Blog Articles</h1>
  <a href="/logged-in-articles/new" class="btn btn-success float-left "> New Article</a>
<div class="float-right">
     <h4><%= user.name %>
     </h4>
     <a href="/" class="float-right">
        <button class="btn btn-warning">
    Logout
    </button>
    </a>      

</div>
<br/>



<br/>

<br/>

    <% articles.forEach(article => { %>
    <div class="card mt-4">
        <div class="card-body">
            <h4 class="card-title">
                <%= article.title %>
            </h4>
                <div class="card-subtitle text-muted mb-2">
                <%= article.createdAt.toLocaleDateString() %>
                </div>
                <div class="card-text">
                    <%= article.description %>
                </div>
                <a href="/logged-in-articles/<%= article.slug %>" 
                    class="btn btn-primary mt-3"> 
                    Read More</a>
                  
              
                         <a href="/logged-in-articles/edit/<%= article.slug %>" class="btn btn-info mt-3">Edit</a>
                    <form action="/logged-in-articles/<%= article.id %>?_method=DELETE" method="POST"
                        class="d-inline">
                     <button type="submit" class="btn btn-danger mt-3">Delete</button>         
                     </form>
                    
           
        </div> 
    </div>
 <%   }) %> 
    </div>  
</body>
</html>
